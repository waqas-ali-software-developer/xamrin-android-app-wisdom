<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wisdom.leaderpg"
             xmlns:local="clr-namespace:wisdom">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="World Wisdom for Leaders" FontSize="Medium" TextColor="Maroon" HorizontalOptions="Center"/>
            <ListView x:Name="leaderlist" ItemTapped="leaderlist_ItemTapped">
                <ListView.ItemTemplate >
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                               
                                <StackLayout Orientation="Vertical">
                                    <Label Text="{Binding Name}" TextColor="Maroon"/>
                                    <Label Text="{Binding Id}" TextColor="White" IsVisible="False"/>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>